<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <TextView
       android:id="@+id/count_now"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintBottom_toTopOf="@+id/add_count"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

   <Button
       android:id="@+id/add_count"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Add"
       app:layout_constraintBottom_toTopOf="@+id/minus_count"
       app:layout_constraintTop_toBottomOf="@+id/count_now"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent" />

   <Button
       android:id="@+id/minus_count"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Minus"
       app:layout_constraintBottom_toTopOf="@+id/reset"
       app:layout_constraintTop_toBottomOf="@+id/add_count"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent" />

   <Button
       android:id="@+id/reset"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Reset"
       android:visibility="invisible"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/minus_count" />
</androidx.constraintlayout.widget.ConstraintLayout>